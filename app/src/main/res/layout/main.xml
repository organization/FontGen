<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/screen" android:layout_width="match_parent" android:layout_height="0dp" android:src="@drawable/main" android:scaleType="fitCenter" android:layout_weight="1.0" />
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1.0">
        <TextView android:layout_width="240dp" android:layout_height="wrap_content" android:text="폰트 파일을 설정해주세요.(ttf 파일)
(없을 경우 시스템 폰트로 설정됩니다.)" />
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <EditText android:id="@+id/path" android:layout_width="180dp" android:layout_height="wrap_content" android:hint="폰트 경로" />
            <Button android:id="@+id/find" android:layout_width="60dp" android:layout_height="wrap_content" android:text="찾기" />
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:id="@+id/setting" android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/setting" />
            <Button android:id="@+id/make" android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/make" />
        </LinearLayout>
        <ProgressBar android:id="@+id/progress" android:layout_width="240dp" android:layout_height="wrap_content" android:max="11172" style="?android:attr/progressBarStyleHorizontal" />
    </LinearLayout>
</LinearLayout>
